<div class="card devise-form1 container1">
  <div class="card-header">
    <h2>Просмотр</h2>
  </div>
  <div class="card-body">

      <p>
        <%= image_tag @photo.image.url %>
        <strong>Описание:</strong>
        <%= @photo.description %><br>

        <strong>eMail пользователя:</strong>
        <%= @photo.user.email if @photo.user %>

      </p>

    <% if @photo.user == current_user %><%= link_to 'Редактировать', edit_photo_path(@photo), class: 'btn btn-primary' %> |<% end %>
      <%= link_to 'Назад', photos_path, class: 'btn btn-primary' %>
  </div>
</div>
