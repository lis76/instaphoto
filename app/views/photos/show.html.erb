<div class="card photo-form container1">
  <div class="card-header">
    <h2>Просмотр</h2>
  </div>
    <div class="card-body">

        <p>
          <%= image_tag @photo.image.url(:large) %><br>
          <strong><%= @photo.description %></strong><br>
          <%= @photo.user.name if @photo.user %>
        </p>

      <% if @photo.user == current_user %><%= link_to 'Редактировать', edit_photo_path(@photo), class: 'btn btn-primary' %> |
        <%= link_to 'Удалить', @photo, method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-primary' %> | <% end %>
        <%= link_to 'Назад', photos_path, class: 'btn btn-primary' %>
    </div>
</div>
