<div class="card devise-form1">
  <div class="card-header">
    <h2>Забыли пароль?</h2>
  </div>
  <div class="card-body">



  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control', autocomplete: "Электронная почта" %>
    </div>

    <div class="actions">
      <%= f.submit "Отправьте мне инструкции по сбросу пароля", class: 'btn btn-primary' %>
    </div>
<% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
