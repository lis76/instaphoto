<div class="jumbotron-landing-4 jumbotron-3 jumbotron h5">
<h2>Поменяйте ваш пароль</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Новый пароль" %><br />
    <% if @minimum_password_length %>
      <em>(Минимум <%= @minimum_password_length %> символов)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "Новый пароль" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Подтвердите новый пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Изменить свой пароль" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
