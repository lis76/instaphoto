<div class="jumbotron-landing-4 jumbotron-3 jumbotron h5">
  <h2>Resend unlock instructions</h2>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "Электронная почта" %>
    </div>

    <div class="actions">
      <%= f.submit "Отправить инструкцию по разблокировке" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
